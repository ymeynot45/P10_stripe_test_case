<div class="container">
  <div id="stripe_error">
    <noscript> JavaScript is not enabled and is required for this form. Enable it in your browser settings.</noscript>
  </div>
  <form action="/charge" method="POST" id="payment-form">
  <span class="payment-errors"></span>

  <div class="form-row">
    <label>
      <span>Card Number</span>
      <input type="text" size="20" data-stripe="number"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>CVC</span>
      <input type="text" size="4" data-stripe="cvc"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Expiration (MM/YYYY)</span>
      <input type="text" size="2" data-stripe="exp-month"/>
    </label>
    <span> / </span>
    <input type="text" size="4" data-stripe="exp-year"/>
  </div>

  <input type="hidden" value="membership" />

  <input type="hidden" value="stripe_card_token" />

  <button type="submit">Submit Payment</button>
  </form>
</div>